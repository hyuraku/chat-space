.sideMenu
  .sideMenu__userName
    = current_user.name
    .sideMenu__userName--fonts
      = link_to new_group_path do
        = fa_icon("edit")
      = link_to edit_user_registration_path do
        = fa_icon("cog")
  = render partial: "shared/group"
.chatMain
  .chatMain__header
    .chatMain__header__group
      sample g
      .chatMain__header__group--menber
        Taro Ziro Tom
    .chatMain__header__edit
      = link_to edit_group_path(params[:group_id]) do
        Edit
  .chatMain__body
    = render partial: "message"
  .chatMain__footer
    .chatMain__footer__body
      Write Message
      .chatMain__footer__body--icon
        = fa_icon("image")
    .chatMain__footer--send
      send
